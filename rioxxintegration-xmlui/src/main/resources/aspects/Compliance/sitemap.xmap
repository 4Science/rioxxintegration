<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
    <map:components>
        <map:transformers>
            <map:transformer name="REFItemComplianceMain" src="org.dspace.app.xmlui.aspect.compliance.REFItemComplianceMain"/>
            <map:transformer name="RIOXXItemComplianceMain" src="org.dspace.app.xmlui.aspect.compliance.RIOXXItemComplianceMain"/>
            <map:transformer name="Navigation" src="org.dspace.app.xmlui.aspect.compliance.Navigation"/>
            <map:transformer name="UnauthorizedRestrictedItem" src="org.dspace.app.xmlui.aspect.artifactbrowser.UnauthorizedRestrictedItem"/>
        </map:transformers>
        <map:matchers default="wildcard">
            <map:matcher name="HandleTypeMatcher" src="org.dspace.app.xmlui.aspect.general.HandleTypeMatcher"/>
        </map:matchers>
        <map:selectors>
            <map:selector name="AuthenticatedSelector" src="org.dspace.app.xmlui.aspect.general.AuthenticatedSelector"/>
            <map:selector name="ComplianceAuthorizedSelector" src="org.dspace.app.xmlui.aspect.compliance.authorization.ComplianceAuthorizedSelector"/>
        </map:selectors>
        <map:actions>
            <map:action name="StartAuthentication" src="org.dspace.app.xmlui.aspect.eperson.StartAuthenticationAction"/>
        </map:actions>
    </map:components>

    <map:pipelines>
        <map:pipeline>

            <!-- Make sure the user is atleast logged in -->
            <map:select type="ComplianceAuthorizedSelector">
                <map:when test="eperson">
                    <map:generate/>

                    <map:transform type="Navigation"/>

                    <map:match pattern="handle/*/*/ref-compliance">
                        <map:match type="HandleTypeMatcher" pattern="item">
                            <map:transform type="REFItemComplianceMain"/>
                            <map:serialize type="xml"/>
                        </map:match>
                    </map:match>

                    <map:match pattern="handle/*/*/rioxx-compliance">
                        <map:match type="HandleTypeMatcher" pattern="item">
                            <map:transform type="RIOXXItemComplianceMain"/>
                            <map:serialize type="xml"/>
                        </map:match>
                    </map:match>

                    <!-- Not a URL we care about, so just pass it on. -->
                    <map:serialize type="xml"/>
                </map:when>
                <map:otherwise>
                    <map:generate/>
                    <map:match pattern="handle/*/*/ref-compliance">
                        <map:select type="AuthenticatedSelector">
                            <map:when test="eperson">
                                <map:transform type="UnauthorizedRestrictedItem"/>
                                <map:serialize/>
                            </map:when>
                            <map:otherwise>
                                <map:act type="StartAuthentication">
                                    <map:parameter name="header"
                                                   value="xmlui.ArtifactBrowser.RestrictedItem.auth_header"/>
                                    <map:parameter name="message"
                                                   value="xmlui.ArtifactBrowser.RestrictedItem.auth_message"/>
                                </map:act>
                                <map:serialize/>
                            </map:otherwise>
                        </map:select>
                    </map:match>

                    <map:match pattern="handle/*/*/rioxx-compliance">
                        <map:select type="AuthenticatedSelector">
                            <map:when test="eperson">
                                <map:transform type="UnauthorizedRestrictedItem"/>
                                <map:serialize/>
                            </map:when>
                            <map:otherwise>
                                <map:act type="StartAuthentication">
                                    <map:parameter name="header"
                                                   value="xmlui.ArtifactBrowser.RestrictedItem.auth_header"/>
                                    <map:parameter name="message"
                                                   value="xmlui.ArtifactBrowser.RestrictedItem.auth_message"/>
                                </map:act>
                                <map:serialize/>
                            </map:otherwise>
                        </map:select>
                    </map:match>


                    <map:serialize type="xml"/>
                </map:otherwise>
            </map:select>

        </map:pipeline>
    </map:pipelines>
</map:sitemap>